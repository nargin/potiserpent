generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Summoner {
	id          String   @id @default(cuid())
	accountId   String
	puuid       String
	name        String
	profileIcon Int
	revision    Int
	summonerId  String
	summonerLevel Int
	updatedAt   DateTime @default(now())
	createdAt   DateTime @default(now())
	aliasId     String
	alias       Alias @relation(fields: [aliasId], references: [id])
}

model Alias {
	id          String   @id @default(cuid())
	alias       String
	summoner	Summoner[]
	updatedAt   DateTime @default(now())
	createdAt   DateTime @default(now())
}
